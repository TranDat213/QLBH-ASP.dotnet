@using Lab1_TranNguyenDat.Models
@model Lab1_TranNguyenDat.Models.Khachhang
@{
	Layout = null;
}
<!DOCTYPE html>

<html>
<head>
	<title>Xóa khách hàng</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
	<h2 class="text-center">Xóa thông tin khach hang</h2>
	<h3 class="text-center">Bạn muốn xóa khach hang này ?</h3>
	<form method="post">
		<div class="form-group">
			<table border="1" cellpadding="5" cellspacing="0">
				<tr>
					<th> <label asp-for="Makh" class="control-label"></label></th>
					<th> <label asp-for="Tenkh" class="control-label"></label></th>
					<th> <label asp-for="Namsinh" class="control-label"></label></th>
					<th> <label asp-for="Phai" class="control-label"></label></th>
					<th> <label asp-for="Dienthoai" class="control-label"></label></th>
					<th> <label asp-for="Diachi" class="control-label"></label></th>
					<th> <label asp-for="Password" class="control-label"></label></th>
				</tr>
				<tr>
					<td>
						<input asp-for="Makh" value="@Model.Makh" class="form-control" readonly />
					</td>
					<td>
						<input asp-for="Tenkh" value="@Model.Tenkh" class="form-control" readonly />
					</td>
					<td>
						<input asp-for="Namsinh" value="@Model.Namsinh" class="form-control" readonly />
					</td>
					<td>
						<input asp-for="Phai" value="@Model.Phai" class="form-control" readonly />
					</td>
					<td>
						<input asp-for="Dienthoai" value="@Model.Dienthoai" class="form-control" readonly />
					</td>
					<td>
						<input asp-for="Diachi" value="@Model.Diachi" class="form-control" readonly />
					</td>
					<td>
						<input asp-for="Password" value="@Model.Password" class="form-control" readonly />
					</td>
				</tr>
			</table>
		</div>
		@if (ViewBag.CanDelete == true)
		{
			<div class="form-group">
				<input type="submit" value="Xóa" class="btn btn-danger" />
			</div>
		}		
		<div>
			<a class="btn btn-warning" href="@Url.Action("index")">Quay lại</a>
		</div>
	</form> 
</body>
</html>