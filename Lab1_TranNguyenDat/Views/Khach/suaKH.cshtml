@using Lab1_TranNguyenDat.Models
@model Lab1_TranNguyenDat.Models.Khachhang
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Sửa khách hàng</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    @{
        QLBHContext db = new QLBHContext();
        List<SelectListItem> ls = new List<SelectListItem>();
        ls.Add(new SelectListItem("Nam", "true"));
        ls.Add(new SelectListItem("Nữ", "false"));
    }
    <form action="suaKH" method="post">
        <div class="form-horizontal">
            <h2>Sửa thông tin khach hang</h2>
            <div class="form-group">
                @*name trùng với tên field được binding*@
                <input asp-for="Makh" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tenkh" class="control-label"></label><br />
                <input asp-for="Tenkh" type="text" class="form-control" />
                <span asp-validation-for="Tenkh" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Namsinh" class="control-label"></label><br />
                <input asp-for="Namsinh" type="text" class="form-control" />
                <span asp-validation-for="Namsinh" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <b>Phái</b><br />
                <div class="form-check form-check-inline">
                    <label asp-for="Phai" class="control-label"></label>
                    <select asp-for="Phai" asp-items="@ls" class="control-label"></select>
                    <span asp-validation-for="Phai" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Dienthoai" class="control-label"></label>
                <input asp-for="Dienthoai" class="form-control" />
                <span asp-validation-for="Dienthoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diachi" class="control-label"></label>
                <input asp-for="Diachi" class="form-control" />
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <br />
            <div>
                <a href="@Url.Action("Index")">Quay lại</a>
            </div>
        </div>
    </form> 
</body>
</html>