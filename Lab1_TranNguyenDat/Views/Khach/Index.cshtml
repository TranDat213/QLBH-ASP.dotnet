@using Lab1_TranNguyenDat.Models
@model Lab1_TranNguyenDat.Models.Khachhang
@{
    Layout = "_Layout";
}
<!DOCTYPE html>

<html>
<head>
    <title>Quản lý Khách hàng</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
    <h2 class="text-center">Thông tin các khách hàng</h2>

    <p>
	    <a class="btn btn-primary" href="@Url.Action("themKhach")">Thêm mới</a>
    </p>

    <table class="table">
        <tr>
            <th><label asp-for="Makh" class="control-label"></label></th>
            <th><label asp-for="Tenkh" class="control-label"></label></th>
            <th><label asp-for="Namsinh" class="control-label"></label></th>
            <th><label asp-for="Phai" class="control-label"></label></th>
            <th><label asp-for="Dienthoai" class="control-label"></label></th>
            <th><label asp-for="Diachi" class="control-label"></label></th>
            <th><label asp-for="Password" class="control-label"></label></th>
            <th>Tac vu</th>
        </tr>
        @{
       
            foreach (var item in ViewBag.kh)
            {
                <tr>
                    <td>@item.Makh</td>
                    <td>@item.Tenkh</td>
                    <td>@item.Namsinh</td>
                    <td>@{
                            if (item.Phai == true)
                            {
                                <p>Nam</p>
                            }
                            else
                            {
                                <p>Nữ</p>
                            }
                            }</td>
                    <td>@item.Dienthoai</td>
                    <td>@item.Diachi</td>
                    <td>@item.Password</td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("suaKH","Khach",new { id = item.Makh
                            })">Sửa</a> |
                        <a class="btn btn-danger" href="@Url.Action("xoaKH","Khach",new { id = item.Makh
                            })">Xóa</a>
                    </td>
                </tr>
            }
        }
    </table>
</div>
</body>
</html>
