@using Lab1_TranNguyenDat.Models
@model Lab1_TranNguyenDat.Models.Hanghoa
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Sửa hàng hóa</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    @{
        QLBHContext db = new QLBHContext();
        List<SelectListItem> ls = new List<SelectListItem>();
        SelectList DSLoai = new SelectList(db.Loaihanghoas.ToList(), "Maloai", "Tenloai");
        SelectList DSNSX = new SelectList(db.Nhasanxuats.ToList(), "Mansx", "Tennsx");
    }
    <form action="suaHH" method="post">
        <div class="form-horizontal">
            <h2>Sửa thông tin hang</h2>
            <div class="form-group">
                @*name trùng với tên field được binding*@
                <input asp-for="Mahang" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tenhang" class="control-label"></label><br />
                <input asp-for="Tenhang" type="text" class="form-control" />
                <span asp-validation-for="Tenhang" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Donvitinh" class="control-label"></label><br />
                <input asp-for="Donvitinh" type="text" class="form-control" />
                <span asp-validation-for="Donvitinh" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Dongia" class="control-label"></label><br />
                <input asp-for="Dongia" type="number" class="form-control" />
                <span asp-validation-for="Dongia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hinh" class="control-label"></label>
                <input asp-for="Hinh" type="file" class="form-control" />
                <span asp-validation-for="Hinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maloai" class="control-label"></label>
                <input asp-for="Maloai" class="form-control" />
                <span asp-validation-for="Maloai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mansx" class="control-label"></label>
                <input asp-for="Mansx" class="form-control" />
                <span asp-validation-for="Mansx" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <br />
            <div>
                <a href="@Url.Action("Index")">Quay lại</a>
            </div>
        </div>
    </form>
</body>
</html>